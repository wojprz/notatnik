<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#A8A8A8">
	<android.support.design.widget.TextInputEditText
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:gravity="top|left"
		android:textColor="#000000"
		android:layout_width="389.5dp"
		android:layout_height="400.0dp"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/textView1" />
	<Button
		android:text="Zapisz"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:backgroundTint="#7093DB"
		android:onClick="ZapButton"
		android:layout_below="@id/textView1"
		android:id="@+id/button1" />
	<android.support.design.widget.TextInputEditText
		android:hint="Nowe hasło"
		android:gravity="center_vertical|center_horizontal"
		android:layout_width="wrap_content"
		android:textColor="#ff3333"
		android:layout_height="wrap_content"
		android:inputType="textPassword"
		android:minWidth="500px"
		android:minHeight="55px"
		android:layout_below="@id/button1"
		android:id="@+id/textInputEditText1" />
	<Button
		android:text="Wróć"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView1"
		android:layout_toRightOf="@id/button1"
		android:backgroundTint="#7093DB"
		android:onClick="PowButton"
		android:id="@+id/button3" />
	<Button
		android:text="Zmień hasło"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="ZmiButton"
		android:backgroundTint="#ff3333"
		android:id="@+id/button2"
		android:layout_below="@id/button1"
		android:layout_toRightOf="@id/textInputEditText1" />
</RelativeLayout>